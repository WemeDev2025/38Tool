<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 深色模式主题 -->
    <style name="Theme.M3U8ExoPlayer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondaryContainer">@color/white</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/background_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/background_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorSurfaceContainer">@color/background_primary</item>
        <item name="colorSurfaceContainerHigh">@color/background_primary</item>
        <item name="colorSurfaceContainerHighest">@color/background_primary</item>
        <!-- Error colors -->
        <item name="colorError">@color/error_color</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_color</item>
        <item name="colorOnErrorContainer">@color/white</item>
        <!-- Outline colors -->
        <item name="colorOutline">@color/text_secondary</item>
        <item name="colorOutlineVariant">@color/text_secondary</item>
        <!-- Status bar and navigation bar colors - 使用Material Design 3系统颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Status bar text color (light for dark background) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">false</item>
        <!-- 支持深色模式 -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>
    
    <!-- No title bar theme -->
    <style name="Theme.M3U8ExoPlayer.NoTitleBar" parent="Theme.M3U8ExoPlayer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>
