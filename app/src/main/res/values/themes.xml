<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M3U8ExoPlayer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_color</item>
        <!-- Status bar text color (dark for white background) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- No title bar theme -->
    <style name="Theme.M3U8ExoPlayer.NoTitleBar" parent="Theme.M3U8ExoPlayer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    
    <!-- 下载中按钮样式 -->
    <style name="DownloadProgressButton" parent="Widget.Material3.Button">
        <item name="android:background">@color/download_progress_bg</item>
        <item name="android:textColor">@color/download_progress_text</item>
        <item name="android:enabled">false</item>
    </style>
</resources>
