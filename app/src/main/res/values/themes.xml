<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.M3U8ExoPlayer" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Surface colors for Material Design 3 -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <!-- Status bar and navigation bar colors - 白天模式使用白色 -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFFFF</item>
        <item name="android:navigationBarColor" tools:targetApi="l">#FFFFFFFF</item>
        <!-- Status bar and navigation bar text color (dark for white background) -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- 确保状态栏和导航栏样式 -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- No title bar theme -->
    <style name="Theme.M3U8ExoPlayer.NoTitleBar" parent="Theme.M3U8ExoPlayer">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- 确保状态栏和导航栏颜色设置 -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFFFF</item>
        <item name="android:navigationBarColor" tools:targetApi="l">#FFFFFFFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o">true</item>
        <!-- 确保状态栏和导航栏样式 -->
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="l">true</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
    </style>
    
    <!-- 下载中按钮样式 -->
    <style name="DownloadProgressButton" parent="Widget.Material3.Button">
        <item name="android:background">@color/download_progress_bg</item>
        <item name="android:textColor">@color/download_progress_text</item>
        <item name="android:enabled">false</item>
    </style>
</resources>
